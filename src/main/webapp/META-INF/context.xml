<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource
        name="jdbc/LiveDataSource"
        auth="Container"
        type="javax.sql.DataSource"
        maxTotal="100"
        maxIdle="30"
        maxWaitMillis="10000"
        
        username="your_username"
        password="your_password"
        
        driverClassName="com.mysql.cj.jdbc.Driver"
        
        url="jdbc:mysql://your_MySQL_Server/your_MySQL_Database?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC"
    />
</Context>